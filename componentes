<template>
  <div>
    <input
      v-model="newTask"
      placeholder="Escribe una tarea..."
      @keyup.enter="addTask"
    />
    <button @click="addTask">Agregar</button>

    <ul>
      <li v-for="(task, index) in tasks" :key="index">
        {{ task }}
        <button @click="removeTask(index)">X</button>
      </li>
    </ul>
  </div>
</template>

<script>
export default {
  data() {
    return {
      newTask: "",
      tasks: []
    };
  },
  methods: {
    addTask() {
      if (this.newTask.trim()) {
        this.tasks.push(this.newTask);
        this.newTask = "";
      }
    },
    removeTask(index) {
      this.tasks.splice(index, 1);
    }
  }
};
</script>

<style>
input {
  margin-right: 10px;
}
button {
  margin-left: 5px;
}
</style>
